@model ScenarioComparisonResult

<h2 class="mb-4">Сравнение сценариев</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Сценарий 1: 4 устройства</h4>
        <p><strong>Общая нагрузка:</strong> @Model.Scenario1.TotalLoad Кбит/с</p>
        <canvas class="bandwidth-chart" data-chart-data="@Model.ChartData1"></canvas>
    </div>
    <div class="col-md-6">
        <h4>Сценарий 2: 5 устройств</h4>
        <p><strong>Общая нагрузка:</strong> @Model.Scenario2.TotalLoad Кбит/с</p>
        <canvas class="bandwidth-chart" data-chart-data="@Model.ChartData2"></canvas>
    </div>
</div>
